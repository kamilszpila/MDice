<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorButton</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:editTextColor">@color/colorText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:textColorHint">@color/colorText</item>
    </style>

    <style name="MenuButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:onClick">click</item>

    </style>

    <style name="OptionsText">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="PlusMinusButton">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:onClick">click</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>

    </style>

    <style name="DiceButton">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:onClick">click</item>

    </style>

    <style name="DiceImage">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/colorImageNonZero</item>
    </style>

    <style name="DiceImageSmall">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/colorImageNonZero</item>
    </style>

    <style name="DiceResultSmall">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/colorImageNonZero</item>
    </style>

    <style name="AddDiscardButton">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:onClick">click</item>

    </style>

    <style name="DiceTV">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">0</item>

    </style>

    <style name="LastResultTV">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">fill_vertical</item>
        <item name="android:text">@string/last_result</item>

    </style>

    <style name="Spinner">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:popupBackground">@color/colorAccent</item>
        <item name="android:backgroundTint">@color/colorButton</item>

    </style>

    <style name="VirtualDicesXml">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/colorBackground</item>

    </style>


</resources>
